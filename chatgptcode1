class TravelFilter:
    def __init__(self, locations, dates, activities):
        self.locations = locations
        self.dates = dates
        self.activities = activities

    def filter_by_location(self, location):
        return [trip for trip in self.locations if location.lower() in trip.lower()]

    def filter_by_date(self, date):
        return [trip for trip in self.dates if date in trip]

    def filter_by_activity(self, activity):
        return [trip for trip in self.activities if activity.lower() in trip.lower()]


# Example usage:
if __name__ == "__main__":
    # Sample data
    locations = ["Paris", "New York", "Tokyo", "London"]
    dates = ["2024-05-10", "2024-06-15", "2024-07-20", "2024-08-25"]
    activities = ["Sightseeing", "Hiking", "Beach", "Shopping"]

    # Create travel filter object
    travel_filter = TravelFilter(locations, dates, activities)

    # Filter by location
    filtered_by_location = travel_filter.filter_by_location("Paris")
    print("Trips to Paris:", filtered_by_location)

    # Filter by date
    filtered_by_date = travel_filter.filter_by_date("2024-07-20")
    print("Trips on 2024-07-20:", filtered_by_date)

    # Filter by activity
    filtered_by_activity = travel_filter.filter_by_activity("Hiking")
    print("Trips involving Hiking:", filtered_by_activity)
